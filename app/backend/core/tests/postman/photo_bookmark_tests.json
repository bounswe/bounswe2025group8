{
  "info": {
    "name": "Neighborhood Assistance Board API - Erdem",
    "_postman_id": "erdem-collection-uuid",
    "description": "Photo Attachment & Bookmarking and Notification tests for Neighborhood Assistance Board API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "5. Photo Attachment",
      "item": [
        {
          "name": "Create Task with No Photos",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.data && jsonData.data.id) {",
                  "    pm.environment.set(\"plumbing_task_id\", jsonData.data.id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Token {{auth_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Leaky Bathroom Faucet Fix\",\n  \"description\": \"Need someone with plumbing experience to fix a leaky faucet\",\n  \"category\": \"HOME_REPAIR\",\n  \"location\": \"Queens, NYC\",\n  \"deadline\": \"2025-05-15T14:00:00Z\",\n  \"requirements\": \"Basic plumbing knowledge\",\n  \"urgency_level\": 4,\n  \"volunteer_number\": 1,\n  \"is_recurring\": false\n}"
            },
            "url": {
              "raw": "http://localhost:8000/api/tasks/",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "tasks", ""]
            },
            "description": "Create a new task (for photo testing)"
          },
          "response": []
        },
        {
          "name": "Attach Photo to Task",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Token {{auth_token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "photo",
                  "type": "file",
                  "src": "/path/to/test-image.jpg"
                }
              ]
            },
            "url": {
              "raw": "http://localhost:8000/api/tasks/{{plumbing_task_id}}/photo/",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "tasks", "{{plumbing_task_id}}", "photo", ""]
            },
            "description": "Attach a photo to a task"
          },
          "response": []
        },
        {
          "name": "Attach Second Photo to Task",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.data && jsonData.data.photo_id) {",
                  "    pm.environment.set(\"plumbing_second_photo_id\", jsonData.data.photo_id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Token {{auth_token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "photo",
                  "type": "file",
                  "src": "/path/to/second-test-image.jpg"
                }
              ]
            },
            "url": {
              "raw": "http://localhost:8000/api/tasks/{{plumbing_task_id}}/photo/",
              "protocol": "http",
              "host": [
                "localhost"
              ],
              "port": "8000",
              "path": [
                "api",
                "tasks",
                "{{plumbing_task_id}}",
                "photo",
                ""
              ]
            },
            "description": "Attach an additional photo to the same task (stores photo_id)"
          },
          "response": []
        },
        {
          "name": "View Task Photos",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Token {{auth_token}}"
              }
            ],
            "url": {
              "raw": "http://localhost:8000/api/tasks/{{plumbing_task_id}}/photo/",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "tasks", "{{plumbing_task_id}}", "photo", ""]
            },
            "description": "Get all photos for a task"
          },
          "response": []
        },
        {
          "name": "Delete Second Photo by ID",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Token {{auth_token}}"
              }
            ],
            "url": {
              "raw": "http://localhost:8000/api/tasks/{{plumbing_task_id}}/photo/?photo_id={{plumbing_second_photo_id}}",
              "protocol": "http",
              "host": [
                "localhost"
              ],
              "port": "8000",
              "path": [
                "api",
                "tasks",
                "{{plumbing_task_id}}",
                "photo",
                ""
              ],
              "query": [
                {
                  "key": "photo_id",
                  "value": "{{plumbing_second_photo_id}}"
                }
              ]
            },
            "description": "Delete the second photo using the saved photo id"
          },
          "response": []
        },
        {
          "name": "Delete Photo",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Token {{auth_token}}"
              }
            ],
            "url": {
              "raw": "http://localhost:8000/api/tasks/{{plumbing_task_id}}/photo/?photo_id=1",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "tasks", "{{plumbing_task_id}}", "photo", ""],
              "query": [
                {
                  "key": "photo_id",
                  "value": "1"
                }
              ]
            },
            "description": "Delete a photo from a task"
          },
          "response": []
        }
      ]
    },
    {
